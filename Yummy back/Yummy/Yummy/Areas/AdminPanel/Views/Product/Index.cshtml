@using Yummy.Models
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
           <a class="btn btn-success" asp-action="Create">Create New Product</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                   <img src=" @product.Image" />
                                </td>
                                <td>
                                   @product.Title
                                </td>
                                <td>
                                    @product.Description
                                </td>
                                <td>
                                    @product.Price
                                </td>
                                <td>
                                    <a class="btn btn-warning" style="color:white;" asp-action="Update" asp-route-id="@product.Id">Update</a>
                                    <a class="btn btn-danger" style="color:white;" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

