
@using Yummy.Models
@model Product
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Product</h4>

            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo">Image:</label>
                    <input class="form-control" asp-for="Photo">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Product Name:</label>
                    <input class="form-control" asp-for="Title" placeholder="Product Name">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Product Description:</label>
                    <input class="form-control" asp-for="Description" placeholder="Product Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Product Price:</label>
                    <input class="form-control" asp-for="Price" placeholder="Product Price">
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>

                <button type="submit" class="btn btn-warning me-2">Edit</button>
                <button class="btn btn-light" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>

